server { 
    listen 8000; 
    server_name localhost; 
    root /var/www/html;
    index my_site.html; 

    location / { 
         try_files $uri $uri/ =404; 
    } 

    location /api {
        proxy_pass http://127.0.0.1:5000/;
    }

    location = /api {
        default_type text/html;
        return 200 '<h1>hello!</h1>';
    }
}

